<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#0e1926"
  android:keepScreenOn="true"
  tools:context=".client.view.FullActivity">



  <EditText
    android:id="@+id/edit_text"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:focusable="true"
    android:inputType="textVisiblePassword" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="150dp"
        android:paddingBottom="150dp">
    </LinearLayout>
      
    <LinearLayout
      android:id="@+id/texture_view_layout"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal" />
  </LinearLayout>
  


  <ImageView
    android:id="@+id/button_nav_bar"
    android:layout_width="35dp"
    android:layout_height="50dp"
    android:layout_gravity="start|top"
    android:focusable="false"    
    android:src="@drawable/menu"
    android:tint="#DEDEDE" />
  
  <ImageView
    android:id="@+id/button_transfer"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="start|top"
    android:layout_marginTop="80dp"
    android:padding="2dp"
    android:focusable="false"
    android:src="@drawable/share_out"
    android:tint="#DEDEDE" />

  <ImageView
    android:id="@+id/button_switch"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="start|center_vertical"
    android:layout_marginBottom="80dp"
    android:padding="1dp"
    android:focusable="false"        
    android:src="@drawable/square"
    android:tint="#DEDEDE" />

  <ImageView
    android:id="@+id/button_home"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="start|center_vertical"
    android:padding="1dp"
    android:focusable="false"        
    android:src="@drawable/o"
    android:tint="#DEDEDE" />

  <ImageView
    android:id="@+id/button_back"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="start|center_vertical"
    android:layout_marginTop="80dp"
    android:padding="1dp"
    android:focusable="false"        
    android:src="@drawable/caret_left"
    android:tint="#DEDEDE" />  
  
  <ImageView
    android:id="@+id/button_light_off"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="start|bottom"
    android:layout_marginBottom="80dp"
    android:padding="3dp"
    android:focusable="false"
    android:src="@drawable/lightbulb_off"
    android:tint="#DEDEDE" />
  
  <ImageView
    android:id="@+id/button_close"
    android:layout_width="35dp"
    android:layout_height="50dp"
    android:layout_gravity="start|bottom"
    android:focusable="false"
    android:src="@drawable/x"
    android:tint="#DEDEDE" />
</FrameLayout>
