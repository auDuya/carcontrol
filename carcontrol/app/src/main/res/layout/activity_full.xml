<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#0e1926"
  android:keepScreenOn="true"
  tools:context=".client.view.FullActivity">

  <EditText
    android:id="@+id/edit_text"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:inputType="textVisiblePassword" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
      android:id="@+id/texture_view_layout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal" />

    <LinearLayout
      android:id="@+id/nav_bar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_gravity="bottom"
      android:visibility="gone"
      android:gravity="center"
      android:orientation="horizontal" 
      android:paddingEnd="10dp"
      android:paddingStart="10dp">

      <ImageView
        android:id="@+id/button_close"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="false"
        android:src="@drawable/x"
        android:tint="@color/onBackground" />  
      
      <ImageView
        android:id="@+id/button_light_off"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="3dp"
        android:focusable="false"        
        android:src="@drawable/lightbulb_off"
        android:tint="@color/onBackground" />   

      <ImageView
        android:id="@+id/button_transfer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="3dp"
        android:focusable="false"        
        android:src="@drawable/share_out"
        android:tint="@color/onBackground" />
      
      <ImageView
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:focusable="false"        
        android:src="@drawable/caret_left"
        android:tint="@color/onBackground" />
      
      <ImageView
        android:id="@+id/button_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:focusable="false"        
        android:src="@drawable/o"
        android:tint="@color/onBackground" />
      
      <ImageView
        android:id="@+id/button_switch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="1dp"
        android:focusable="false"        
        android:src="@drawable/square"
        android:tint="@color/onBackground" />
      
    </LinearLayout> 
  </LinearLayout>
  
  <ImageView
    android:id="@+id/button_nav_bar"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_gravity="start|top"
    android:focusable="false"    
    android:src="@drawable/menu"
    android:tint="@color/onBackground" />
</FrameLayout>
